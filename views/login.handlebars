<div class="bg-gray-200 h-screen flex-col items-center justify-center">
  <div class="w-1/2 bg-white shadow-lg rounded-lg p-8">
    <h1 class="text-3xl font-bold mb-6 text-center">Login</h1>
    <form id="login-form">
      <label for="email-login" class="block mb-2 font-bold text-gray-700">Email:</label>
      <input type="email" id="email-login" name="email" class="w-full p-2 rounded-lg mb-6 bg-gray-200">
      <label for="password-login" class="block mb-2 font-bold text-gray-700">Password:</label>
      <input type="password" id="password-login" name="password" class="w-full p-2 rounded-lg mb-6 bg-gray-200">
      <button type="submit" class="w-full p-2 rounded-lg bg-blue-500 text-white font-bold mb-6 hover:bg-blue-700">Log In</button>
    </form>

    <hr class="my-8 border-t-2 border-gray-400">

    <h1 class="text-3xl font-bold mb-6 text-center">Sign Up</h1>
    <form id="signup-form">
      <label for="username-signup" class="block mb-2 font-bold text-gray-700">Username:</label>
      <input type="text" id="username-signup" name="name" class="w-full p-2 rounded-lg mb-6 bg-gray-200">
      <label for="email-signup" class="block mb-2 font-bold text-gray-700">Email:</label>
      <input type="email" id="email-signup" name="email" class="w-full p-2 rounded-lg mb-6 bg-gray-200">
      <label for="password-signup" class="block mb-2 font-bold text-gray-700">Password:</label>
      <input type="password" id="password-signup" name="password" class="w-full p-2 rounded-lg mb-6 bg-gray-200">
      <button type="submit" class="w-full p-2 rounded-lg bg-blue-500 text-white font-bold hover:bg-blue-700">Sign Up</button>
    </form>
  </div>
</div>
